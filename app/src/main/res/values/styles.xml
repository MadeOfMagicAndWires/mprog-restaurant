<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MenuItemImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:contentDescription">@string/item_img_desc</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.MenuItemTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.MenuItemTextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.MenuItemTitle" parent="AppTheme.MenuItemTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.MenuItemDesc" parent="AppTheme.MenuItemTextAppearance">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AppTheme.MenuItemPrice" parent="AppTheme.MenuItemTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="AppTheme.MenuItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:tint">@android:color/secondary_text_dark</item>
    </style>

    <style name="AppTheme.MenuItemOverflowMenu" parent="AppTheme.MenuItemIcon">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/overflow_menu_desc</item>

    </style>


</resources>
